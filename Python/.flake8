[flake8]
per-file-ignores =
    # imported but unused
    __init__.py: F401
max-line-length = 120
max-complexity = 10
ignore =
    # E501: line too long - pylint will take care of it
    E501,
    # W291: trailing whitespace - pylint will take care of it
    W291,
    # W503: line break before binary operator
    W503